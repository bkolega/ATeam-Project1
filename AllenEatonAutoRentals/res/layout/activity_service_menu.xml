<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aTeam.alleneatonautorentals.ServiceMenu" >

    <Button
        android:id="@+id/checkInButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="checkInCar"
        android:text="Check In Car" />

    <Button
        android:id="@+id/printDetailsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carUseButton"
        android:layout_below="@+id/carUseButton"
        android:layout_marginTop="14dp"
        android:text="Print Details About Car" />

    <Button
        android:id="@+id/addNoteButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/printDetailsButton"
        android:layout_below="@+id/printDetailsButton"
        android:layout_marginTop="14dp"
        android:onClick="addNote"
        android:text="Add Service Note" />

    <Button
        android:id="@+id/carUseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkInButton"
        android:layout_below="@+id/checkInButton"
        android:layout_marginTop="14dp"
        android:onClick="viewCarsInUse"
        android:text="View Cars in Use" />

    <Button
        android:id="@+id/logOutButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="authenticateLogout"
        android:text="Log Out" />

</RelativeLayout>